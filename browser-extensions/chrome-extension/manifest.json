{
  "manifest_version": 3,
  "name": "USDTgWallet - Quantum-Safe Web3 Wallet",
  "version": "1.0.0",
  "description": "üîê World's first quantum-safe Web3 wallet with 256-bit security and multi-chain support",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "clipboardWrite",
    "clipboardRead"
  ],
  
  "host_permissions": [
    "https://*.usdtgverse.com/*",
    "https://*.ethereum.org/*",
    "https://*.binance.org/*",
    "https://*.trongrid.io/*",
    "https://*.solana.com/*",
    "https://*.polygon.technology/*",
    "https://*.arbitrum.io/*",
    "https://*.avax.network/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "USDTgWallet - Quantum-Safe Wallet",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "quantum-crypto.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
