[Unit]
Description=USDTgVerse Social Media Bot
After=network.target

[Service]
Type=simple
User=usdtgverse
WorkingDirectory=/opt/usdtgverse/social-bot
ExecStart=/usr/bin/python3 automated_social_media_system.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
